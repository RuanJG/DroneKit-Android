<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.o3dr.sample.hellodrone.RcControlFragment">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/ThrLable"
                    android:text="Thr:"/>
                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="2000"
                    android:progress="50"
                    android:id="@+id/thrBar"
                    android:mirrorForRtl="false" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="fill_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/YawLable"
                    android:text="Yaw:"/>
                <SeekBar
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:max="2000"
                    android:progress="50"
                    android:id="@+id/yawBar"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="fill_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/PitchLable"
                    android:text="Pitch:"/>
                <SeekBar
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:max="2000"
                    android:progress="50"
                    android:id="@+id/pitchBar"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="fill_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/RollLable"
                    android:text="Roll:"/>
                <SeekBar
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:max="2000"
                    android:progress="50"
                    android:id="@+id/rollBar"/>
            </TableRow>


        </TableLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="On/OFF"
                android:id="@+id/RcSwitch" />

        </LinearLayout>




    </LinearLayout>


</FrameLayout>
